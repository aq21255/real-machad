# Fly.io Configuration File
# Copy this to fly.toml after running "fly launch"

app = "khabbab-exam-results"
primary_region = "lhr"  # Change to your preferred region

[build]
  builder = "paketobuildpacks/builder:base"

[env]
  PORT = "5000"
  NODE_ENV = "production"

[http_service]
  internal_port = 5000
  force_https = true
  auto_stop_machines = false  # IMPORTANT: Keeps app running 24/7
  auto_start_machines = true
  min_machines_running = 1     # IMPORTANT: Always keep 1 machine running
  processes = ["app"]

  [[http_service.checks]]
    grace_period = "10s"
    interval = "30s"
    method = "GET"
    timeout = "5s"
    path = "/"

[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 256

